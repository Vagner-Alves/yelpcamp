<% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="post" novalidate  enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="text" name="campground[title]" value="<%= campgrounds.title%>" required>
                    <div class="valid-feedback">
                        looks good
                    </div
                </div>
                <div class="mb-3">
                    <label class="form-label"for="location">location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campgrounds.location %>" required>
                    <div class="valid-feedback">
                        looks good
                    </div
                </div>
                <div class="mb-3">
                    <label class="form-label"for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="addon-wrapping">$</span>
                        <input type="text" class="form-control" id="price-label"placeholder="0.00" aria-label="Username" aria-describedby="input-label" name="campground[price]" value="<%= campgrounds.price %>" required>
                        <div class="valid-feedback">
                            looks good
                        </div
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label"for="description">description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campgrounds.description %> </textarea>
                    <div class="valid-feedback">
                        looks good
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label"for="image">Add images</label>
                    <input type="file" name="image" id="image" multiple>
                </div>
        <div class="mb-3">
            <% campgrounds.images.forEach(function(img,i){ %>
            
                <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" crossorigin="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">delete</label>
                <% }) %>
                    </div>
             <div class="mb-3">
                    <button class="btn btn-info">Update </button>
                </div>
                <a class="btn btn-success" href="/campgrounds/<%=campgrounds._id %>">Back</a></footer>
            </form>
